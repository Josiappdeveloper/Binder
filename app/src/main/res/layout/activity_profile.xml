<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Profile.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/img_one"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/d_oval_shape"
                        android:scaleType="centerInside"
                        android:src="@drawable/profile" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/coloraccent"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amaranth_bold"
                            android:text="Get"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amaranth_bold"
                            android:text="True Dates"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amaranth_bold"
                            android:text="Premium"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btnupgrade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/d_round_pink_border"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="Upgrade"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tvcomplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete Profile"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/profile"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/coloraccent"/>


                <TextView
                    android:id="@+id/tvverify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get verified"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/tick"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/coloraccent"/>

                <TextView
                    android:id="@+id/tvinsta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instagram"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/instagram"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/coloraccent"/>

                <TextView
                    android:id="@+id/tvpreference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preferences"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/control"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/coloraccent"/>

                <TextView
                    android:id="@+id/tvyourlikes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Likes"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/hearttick"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/coloraccent"/>
                <TextView
                    android:id="@+id/tvrecent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recent Passes"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/undo"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/coloraccent"/>


                <TextView
                    android:id="@+id/tvlovestories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Love Stories"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/heartbeat"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/coloraccent"/>

                <TextView
                    android:id="@+id/tvhelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help Center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/question"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/coloraccent"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
