<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Registration.PhotoActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:max="100"
        android:progress="100"/>
    <!--<com.kofigyan.stateprogressbar.StateProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:spb_animateToCurrentProgressState="true"
        app:spb_checkStateCompleted="true"
        app:spb_currentStateDescriptionColor="@color/coloraccent"
        app:spb_currentStateNumber="five"
        app:spb_enableAllStatesCompleted="true"
        app:spb_maxStateNumber="five"
        app:spb_stateBackgroundColor="#BDBDBD"
        app:spb_stateDescriptionColor="#808080"
        app:spb_stateForegroundColor="@color/coloraccent"
        app:spb_stateNumberBackgroundColor="#808080"
        app:spb_stateNumberForegroundColor="#eeeeee" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:text="Photo"
            android:textColor="@color/coloraccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/amaranth_bold"
            android:text="It's All About"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/amaranth_bold"
            android:text="Presentation"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/img_one"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/d_oval_shape"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_add_black_24dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/img_two"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/d_oval_shape"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_add_black_24dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/img_three"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/d_oval_shape"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_add_black_24dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/img_four"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/d_oval_shape"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_add_black_24dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/img_five"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/d_oval_shape"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_add_black_24dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/img_six"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/d_oval_shape"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_add_black_24dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Upload at least 4 photos"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_basic"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_pink_background"
                android:onClick="GetRegister"
                android:text="@string/continue_txt"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>